<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_sin"
    tools:context=".MainActivity">


    <TextView
        android:id="@+id/one_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Напишите пароль"
        android:textSize="25sp"/>

    <Button
        android:id="@+id/login"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:layout_marginTop="20dp"
        android:background="@color/color_blue"
        android:text="Логин"
        android:textColor="@color/color_white"
        android:textSize="20sp"
        app:layout_constraintLeft_toLeftOf="@+id/hello_barcelona"
        app:layout_constraintRight_toRightOf="@+id/hello_barcelona"
        app:layout_constraintTop_toBottomOf="@+id/hello_barcelona" />

    <Button
        android:id="@+id/parol"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:layout_marginTop="10dp"
        android:background="@color/color_blue"
        android:onClick="onOperationClick"
        android:text="Пароль"
        android:textColor="@color/color_white"
        android:textSize="20sp"
        app:layout_constraintLeft_toLeftOf="@+id/login"
        app:layout_constraintRight_toRightOf="@+id/login"
        app:layout_constraintTop_toBottomOf="@+id/login" />


    <Button
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:layout_marginTop="10dp"
        android:background="@color/color_blue"
        android:text="Регистрация"
        android:textColor="@color/color_white"
        android:textSize="20sp"
        app:layout_constraintLeft_toLeftOf="@+id/parol"
        app:layout_constraintRight_toRightOf="@+id/parol"
        app:layout_constraintTop_toBottomOf="@+id/parol" />


    <TextView
        android:id="@+id/hello_barcelona"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Hello Manchester City!"
        android:textColor="@color/color_white"
        android:textSize="35sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />




/</androidx.constraintlayout.widget.ConstraintLayout>